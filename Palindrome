#include <iostream>
#include <string>
using namespace std;
int main() {
    string str, reversed = "";
    cout << "Enter a word: ";
    cin >> str;    
    for (int i = str.length() - 1; i >= 0; i--) {
        reversed += str[i];
    }   
    if (str == reversed) {
        cout << "The word is a palindrome." << endl;
    } else {
        cout << "The word is not a palindrome." << endl;
    }
    return 0;
}

OUTPUT
Enter a word: hello
The word is not a palindrome.
